{
  "manifest_version": 3,
  "name": "AutoJobr - Job Application Assistant",
  "version": "1.0.0",
  "description": "Automate job applications with smart form filling and real-time job matching analysis.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.workday.com/*",
    "https://*.myworkdayjobs.com/*",
    "https://*.greenhouse.io/*",
    "https://boards.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://jobs.lever.co/*",
    "https://*.icims.com/*",
    "https://*.linkedin.com/*",
    "https://*.bamboohr.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.monster.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.jobvite.com/*",
    "https://jobs.jobvite.com/*",
    "https://*.smartrecruiters.com/*",
    "https://jobs.smartrecruiters.com/*",
    "https://*.ashbyhq.com/*",
    "https://jobs.ashbyhq.com/*",
    "https://*.wellfound.com/*",
    "https://*.angel.co/*",
    "https://*.dice.com/*",
    "https://*.careersatapple.com/*",
    "https://*.careers.google.com/*",
    "https://*.careers.microsoft.com/*",
    "https://*.jobs.netflix.com/*",
    "https://*.careers.tesla.com/*",
    "https://*.amazon.jobs/*",
    "https://*.careers.uber.com/*",
    "https://*.careers.airbnb.com/*",
    "https://*.greenhouse.rippling.com/*",
    "https://*.breezy.hr/*",
    "https://*.workable.com/*",
    "https://*.recruitee.com/*",
    "https://*.personio.com/*",
    "https://*.teamtailor.com/*",
    "https://*.join.com/*",
    "https://*.softgarden.com/*",
    "https://*.talentlyft.com/*",
    "https://*.comeet.com/*",
    "https://*.talentsoft.com/*",
    "https://*.cornerstone.com/*",
    "https://*.successfactors.com/*",
    "https://*.taleo.net/*",
    "https://*.kenexa.com/*",
    "https://*.brass.io/*",
    "https://*.fountain.com/*",
    "https://*.greenhouse.rippling.com/*",
    "http://localhost:*/*",
    "https://*.replit.app/*",
    "https://*.replit.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.workday.com/*",
        "https://*.myworkdayjobs.com/*",
        "https://*.greenhouse.io/*",
        "https://boards.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://jobs.lever.co/*",
        "https://*.icims.com/*",
        "https://*.linkedin.com/*",
        "https://*.bamboohr.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.jobvite.com/*",
        "https://jobs.jobvite.com/*",
        "https://*.smartrecruiters.com/*",
        "https://jobs.smartrecruiters.com/*",
        "https://*.ashbyhq.com/*",
        "https://jobs.ashbyhq.com/*",
        "https://*.wellfound.com/*",
        "https://*.angel.co/*",
        "https://*.dice.com/*",
        "https://*.careersatapple.com/*",
        "https://*.careers.google.com/*",
        "https://*.careers.microsoft.com/*",
        "https://*.jobs.netflix.com/*",
        "https://*.careers.tesla.com/*",
        "https://*.amazon.jobs/*",
        "https://*.careers.uber.com/*",
        "https://*.careers.airbnb.com/*",
        "https://*.breezy.hr/*",
        "https://*.workable.com/*",
        "https://*.recruitee.com/*",
        "https://*.personio.com/*",
        "https://*.teamtailor.com/*",
        "https://*.join.com/*",
        "https://*.softgarden.com/*",
        "https://*.talentlyft.com/*",
        "https://*.comeet.com/*",
        "https://*.talentsoft.com/*",
        "https://*.cornerstone.com/*",
        "https://*.successfactors.com/*",
        "https://*.taleo.net/*",
        "https://*.kenexa.com/*",
        "https://*.brass.io/*",
        "https://*.fountain.com/*"
      ],
      "js": ["lib/compromise.min.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoJobr Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}